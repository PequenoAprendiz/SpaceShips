<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="8dp">

    <LinearLayout
            android:id="@+id/layoutdados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_margin="5dp"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="1dp">

            <LinearLayout
                    android:id="@+id/layoutActions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="1dp"
                    android:layout_gravity="right">

                <android.support.v7.widget.AppCompatImageButton
                        android:id="@+id/img_see"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/layoutActionsLabels"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="1dp"
                    android:layout_gravity="right">

                <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/textViewSeee"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:src="@drawable/baseline_visibility_black_18dp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/layoutLabels"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp">

            <TextView
                    android:id="@+id/textViewName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/Shipname"
                    android:textAlignment="textStart"
                    android:textStyle="bold"/>

            <TextView
                    android:id="@+id/textViewLabelValorBtc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/cost"
                    android:textAlignment="textStart"
                    android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/layoutValores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/textViewValorSapaceShipName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="name spaceship"
                    android:textAlignment="textStart"
                    android:textStyle="bold"/>

            <TextView
                    android:id="@+id/textViewValorPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="1.0"
                    android:textAlignment="textStart"
                    android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>